<%= form_with(model: @conversation, url: conversations_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter conversation title' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control', placeholder: 'Enter conversation content' %>
  </div>

  <div class="form-group">
    <%= form.label :tag_list, 'Tags (comma-separated)' %>
    <%= form.text_field :tag_list, class: 'form-control', placeholder: 'Enter tags separated by commas' %>
  </div>



  <%= form.submit "Create Conversation", class: 'btn btn-primary' %>
<% end %>
