<%= form_with(model: @conversation, url: conversation_path(@conversation), method: :patch) do |form| %>

  <% if conversation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(conversation.errors.count, "error") %> prohibited this conversation from being saved:</h2>

      <ul>
        <% conversation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

 <div class="form-group">
  <%= form.label :category_id, 'Category' %>
  <%= form.collection_select :category_ids, @categories, :id, :name, { prompt: 'Select a category' }, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :tag_ids, "Tags" %>
    <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  </div>
  
  <%= form.submit %>
<% end %>