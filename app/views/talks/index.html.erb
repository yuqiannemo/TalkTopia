<style>
  .masonry-item {
    background-color: #fce4ec;
    border: 2px solid #ff4081;
    border-radius: 20px;
    padding: 15px;
    margin: 0;
  }

  .custom-card-title {
    color: #880e4f;
    font-size: 20px;
    font-weight: bold;
  }

  .custom-card-content {
    color: #880e4f;
    font-weight: bold;
  }
</style>

<p style="color: green"><%= notice %></p>

<h1 class="mb-4">Talks</h1>
<script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>

<div class="masonry-container">
  <% @talks.each do |talk| %>
    <div class="masonry-item">
      <div class="custom-card-title"><%= talk.topic %></div>
      <div class="custom-card-content">
        Tribe: <%= talk.tribe %><br>
        Importance: <%= talk.importance %><br>
      </div>
      <div class="custom-card-buttons">
        <%= link_to "Show", talk, class: "btn btn-info btn-sm" %>
        <%= button_to 'Delete', talk, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var masonryContainer = document.querySelector('.masonry-container');
    var masonry = new Masonry(masonryContainer, {
      itemSelector: '.masonry-item',
      columnWidth: '.masonry-item',
      gutter: 20,
    });
  });
</script>
</br>
<%= link_to "Start a Talk", new_talk_path, class: "btn btn-primary mb-4" %>