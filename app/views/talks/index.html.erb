<p style="color: green"><%= notice %></p>

<h1>Talks</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th>topic</th>
      <th>tribe</th>
      <th>importance</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @talks.each do |talk| %>
      <tr>
        <td><%= talk.topic %></td>
        <td><%= talk.tribe %></td>
        <td><%= talk.importance %></td>
        <td><%= link_to "Show", talk %></td>
        <td><%= button_to 'Delete', talk, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "start a talk", new_talk_path, class:"btn btn-primary" %>